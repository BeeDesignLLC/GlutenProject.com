{
  "name": "glutenproject",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:BeeDesignLLC/GlutenProject.com.git",
  "author": "Brandon Bayer <b@bayer.ws>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "next",
    "build": "next build",
    "now-start": "next start",
    "lint-format": "eslint --ext .js pages --fix",
    "test": "exit",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "next": "^4.2.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "styled-components": "^2.4.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-plugin-styled-components": "^1.4.0",
    "eslint": "^4.15.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-flowtype-errors": "^3.3.7",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.4.0",
    "eslint-plugin-react": "^7.5.1",
    "flow-bin": "^0.63.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "prettier": "^1.10.2"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "plugins": [
      "react",
      "flowtype",
      "jsx-a11y",
      "prettier",
      "flowtype-errors"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2,
      "prettier/prettier": [
        "error",
        {
          "printWidth": 90,
          "semi": false,
          "trailingComma": "es5",
          "bracketSpacing": false,
          "singleQuote": true
        }
      ],
      "react/display-name": 0
    }
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"]
  }
}
