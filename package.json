{
  "name": "glutenproject",
  "version": "0.1.0",
  "main": "index.js",
  "repository": "git@github.com:BeeDesignLLC/GlutenProject.com.git",
  "author": "Brandon Bayer <b@bayer.ws>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node server.js",
    "build": "next build",
    "now-start": "NODE_ENV=production node server.js",
    "lint-format": "eslint --ext .js pages --fix",
    "test": "exit",
    "precommit": "lint-staged"
  },
  "dependencies": {
    "debounce-fn": "1.0.0",
    "micro": "9.1.0",
    "next": "^5.0.1-canary.2",
    "path-match": "1.2.4",
    "path-to-regexp": "2.1.0",
    "prop-types": "15.6.0",
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-instantsearch": "4.5.1",
    "styled-components": "3.1.6",
    "styled-css-grid": "0.8.2",
    "styled-system": "1.1.7",
    "titleize": "1.0.0"
  },
  "devDependencies": {
    "babel-eslint": "8.2.1",
    "babel-plugin-styled-components": "1.5.0",
    "eslint": "4.18.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-plugin-flowtype": "2.45.0",
    "eslint-plugin-flowtype-errors": "3.5.0",
    "eslint-plugin-jsx-a11y": "6.0.3",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.6.1",
    "flow-bin": "0.66.0",
    "husky": "0.14.3",
    "lint-staged": "6.1.1",
    "prettier": "1.10.2"
  },
  "engines": {
    "node": "9"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "node": true,
      "browser": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier"
    ],
    "plugins": [
      "react",
      "flowtype",
      "jsx-a11y",
      "prettier",
      "flowtype-errors"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2,
      "prettier/prettier": [
        "error",
        {
          "printWidth": 90,
          "semi": false,
          "trailingComma": "es5",
          "bracketSpacing": false,
          "singleQuote": true
        }
      ],
      "react/display-name": 0,
      "jsx-a11y/anchor-is-valid": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
